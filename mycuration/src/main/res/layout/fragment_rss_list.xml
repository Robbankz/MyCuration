<android.support.constraint.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_all_unread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/view_selected"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/allIcon"
            style="@style/AppTheme.IconListItem.Icon"
            android:src="@drawable/ic_view_headline_black_24dp"
            android:contentDescription="@string/all"
            apps:layout_constraintStart_toStartOf="parent"
            apps:layout_constraintTop_toTopOf="parent"
            apps:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/allUnreadFeed"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/AppTheme.IconListItem.Title"
            android:textSize="18sp"
            android:text="@string/all"
            apps:layout_constraintStart_toEndOf="@id/allIcon"
            apps:layout_constraintTop_toTopOf="parent"
            apps:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/allUnreadCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppTheme.IconListItem.EndText"
            android:layout_gravity="center_vertical"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintTop_toTopOf="parent"
            apps:layout_constraintBottom_toBottomOf="parent"
            tools:text="100"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            style="@style/divider"
            apps:layout_constraintStart_toStartOf="@id/allUnreadFeed"
            apps:layout_constraintEnd_toEndOf="parent"
            apps:layout_constraintBottom_toBottomOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        apps:layout_constraintTop_toBottomOf="@id/cl_all_unread"
        apps:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_rss"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawSelectorOnTop="true"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_rss_message"
        apps:layout_constraintTop_toBottomOf="@id/cl_all_unread"
        apps:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />
</android.support.constraint.ConstraintLayout>