<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_filter_list_black"
        android:contentDescription="@string/filter"
        app:layout_constraintBottom_toBottomOf="@id/til_filter_title"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_filter_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/iv_filter_title"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/filterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/text_size_register_filter"
            android:hint="@string/filter_name"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
		android:id="@+id/tv_target_rss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_vertical"
        android:drawableLeft="@drawable/ic_rss_feed_black"
        android:drawablePadding="8dp"
        android:hint="@string/target_rss"
        android:textSize="@dimen/text_size_register_filter"
        app:layout_constraintTop_toBottomOf="@id/iv_filter_title"/>

    <ImageView
        android:id="@+id/iv_filter_keyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_description_black"
        android:contentDescription="@string/filter"
        app:layout_constraintBottom_toBottomOf="@id/til_filter_keyword"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_filter_keyword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_filter_keyword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_target_rss">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/filterKeyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/text_size_register_filter"
            android:layout_weight="90"
            android:hint="@string/keyword"/>
    </android.support.design.widget.TextInputLayout>

	<TextView
        android:id="@+id/tv_keyword_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
		android:text="@string/keyword_description"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/iv_filter_keyword"/>

    <ImageView
        android:id="@+id/iv_filter_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_web_black"
        android:contentDescription="@string/article_url"
        app:layout_constraintBottom_toBottomOf="@id/til_filter_url"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_filter_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_keyword_description"
        app:layout_constraintStart_toEndOf="@id/iv_filter_url"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/filterUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:textSize="@dimen/text_size_register_filter"
            android:hint="@string/article_url"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/article_url_description"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/iv_filter_url"/>
</android.support.constraint.ConstraintLayout>
